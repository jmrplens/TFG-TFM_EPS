{
    // =========================================================================
    // CONFIGURACI√ìN DE VS CODE PARA PLANTILLA TFG/TFM EPS UA
    // =========================================================================
    // 
    // Esta configuraci√≥n est√° optimizada para trabajar con la plantilla.
    // Si usas VS Code, instala la extensi√≥n "LaTeX Workshop" (James-Yu.latex-workshop)
    //
    // La receta por defecto (latexmk) hace m√∫ltiples pasadas autom√°ticamente
    // para generar correctamente √≠ndices, bibliograf√≠a y referencias cruzadas.
    // =========================================================================

    // =========================================================================
    // LATEX WORKSHOP - COMPILACI√ìN
    // =========================================================================
    
    // Receta por defecto: latexmk hace m√∫ltiples pasadas autom√°ticamente
    // Esto genera correctamente: √≠ndices, bibliograf√≠a, glosarios, referencias
    "latex-workshop.latex.recipe.default": "üöÄ Compilaci√≥n completa (latexmk)",
    
    // Recetas de compilaci√≥n (ordenadas de m√°s a menos completa)
    "latex-workshop.latex.recipes": [
        {
            "name": "üöÄ Compilaci√≥n completa (latexmk)",
            "tools": ["latexmk-lualatex"]
        },
        {
            "name": "üìÑ Compilaci√≥n manual completa",
            "tools": ["lualatex", "biber", "makeglossaries", "lualatex", "lualatex"]
        },
        {
            "name": "‚ö° Compilaci√≥n r√°pida (solo lualatex)",
            "tools": ["lualatex"]
        },
        {
            "name": "üìö Solo bibliograf√≠a (biber)",
            "tools": ["biber"]
        },
        {
            "name": "üìñ Solo glosarios",
            "tools": ["makeglossaries"]
        }
    ],
    
    // Herramientas de compilaci√≥n
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk-lualatex",
            "command": "latexmk",
            "args": [
                "-lualatex",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-synctex=1",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-synctex=1",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": ["%DOCFILE%"],
            "env": {}
        },
        {
            "name": "makeglossaries",
            "command": "makeglossaries",
            "args": ["%DOCFILE%"],
            "env": {}
        }
    ],
    
    // Limpiar archivos auxiliares al cerrar
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.bcf",
        "*.blg",
        "*.fdb_latexmk",
        "*.fls",
        "*.idx",
        "*.ilg",
        "*.ind",
        "*.lof",
        "*.log",
        "*.lol",
        "*.lot",
        "*.out",
        "*.run.xml",
        "*.synctex.gz",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.listing"
    ],
    
    // Configuraci√≥n del visor de PDF
    "latex-workshop.view.pdf.viewer": "tab",
    
    // Directorio de salida (mantener en ra√≠z para compatibilidad)
    "latex-workshop.latex.outDir": "%DIR%",
    
    // Mostrar errores en el editor
    "latex-workshop.message.error.show": true,
    "latex-workshop.message.warning.show": true,
    
    // Autocompletado inteligente
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.intellisense.citation.backend": "biblatex",
    
    // Sincronizaci√≥n bidireccional PDF ‚Üî c√≥digo
    "latex-workshop.synctex.afterBuild.enabled": true,
    
    // =========================================================================
    // FORMATEO Y ESTILO
    // =========================================================================
    
    // Asociaciones de archivo
    "[latex]": {
        "editor.formatOnSave": false,
        "editor.wordWrap": "on",
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    
    "[bibtex]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    
    // Diccionario espa√±ol para correcci√≥n ortogr√°fica
    "cSpell.language": "es,en",
    "cSpell.ignorePaths": [
        "*.bib",
        "cls/*",
        "sty/*"
    ],
    
    // =========================================================================
    // EXPLORADOR DE ARCHIVOS
    // =========================================================================
    
    // Ocultar archivos auxiliares en el explorador
    "files.exclude": {
        "**/*.aux": true,
        "**/*.bbl": true,
        "**/*.bcf": true,
        "**/*.blg": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.log": true,
        "**/*.out": true,
        "**/*.synctex.gz": true,
        "**/*.toc": true,
        "**/*.lof": true,
        "**/*.lot": true,
        "**/*.run.xml": true,
        "**/_minted*": true,
        "**/*.listing": true,
        "**/*.acn": true,
        "**/*.acr": true,
        "**/*.alg": true,
        "**/*.glg": true,
        "**/*.glo": true,
        "**/*.gls": true,
        "**/*.ist": true,
        "**/*.lol": true
    }
}