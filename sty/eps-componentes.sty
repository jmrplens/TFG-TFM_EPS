%% eps-componentes.sty
%% Componentes especializados para TFG/TFM - EPS Universidad de Alicante
%% 
%% Este paquete proporciona componentes visuales especializados para
%% diferentes disciplinas académicas.
%%
%% Uso:
%%   \usepackage{eps-componentes}                    % Carga solo comunes
%%   \usepackage[software]{eps-componentes}         % Comunes + Software
%%   \usepackage[telecom]{eps-componentes}          % Comunes + Telecom
%%   \usepackage[arquitectura]{eps-componentes}     % Comunes + Arquitectura
%%   \usepackage[quimica]{eps-componentes}          % Comunes + Química
%%   \usepackage[all]{eps-componentes}              % Todos los componentes
%%
%% Autor: Plantilla TFG/TFM EPS UA
%% Versión: 2.1.0

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{eps-componentes}[2026/02/03 v2.1.0 Componentes especializados EPS UA]

% ============================================================================
% OPCIONES DEL PAQUETE
% ============================================================================

\newif\if@eps@comunes     \@eps@comunestrue   % Siempre se cargan
\newif\if@eps@software    \@eps@softwarefalse
\newif\if@eps@telecom     \@eps@telecomfalse
\newif\if@eps@arquitectura\@eps@arquitecturafalse
\newif\if@eps@quimica     \@eps@quimicafalse
\newif\if@eps@geologia    \@eps@geologiafalse
\newif\if@eps@prevencion  \@eps@prevencionfalse

\DeclareOption{comunes}{}  % Opción explícita (por defecto ya se cargan)
\DeclareOption{software}{\@eps@softwaretrue}
\DeclareOption{telecom}{\@eps@telecomtrue}
\DeclareOption{arquitectura}{\@eps@arquitecturatrue}
\DeclareOption{quimica}{\@eps@quimicatrue}
\DeclareOption{geologia}{\@eps@geologiatrue}
\DeclareOption{prevencion}{\@eps@prevenciontrue}
\DeclareOption{all}{%
  \@eps@softwaretrue
  \@eps@telecomtrue
  \@eps@arquitecturatrue
  \@eps@quimicatrue
  \@eps@geologiatrue
  \@eps@prevenciontrue
}

\ProcessOptions\relax

