% Caja de comparación lado a lado
% Uso: \begin{comparison}{Opción A}{Opción B}
%        \comprow{Criterio 1}{Valor A}{Valor B}
%      \end{comparison}
\newenvironment{comparison}[2]{%
  \def\@compheadA{#1}%
  \def\@compheadB{#2}%
  \begin{tcolorbox}[
    eps-base,
    colback=white,
    colframe=eps-gray!50,
  ]
  \begin{tabular}{@{}p{0.3\linewidth}|p{0.3\linewidth}|p{0.3\linewidth}@{}}
    \textbf{Criterio} & \textbf{\@compheadA} & \textbf{\@compheadB} \\
    \hline
}{%
  \end{tabular}
  \end{tcolorbox}
}

\newcommand{\comprow}[3]{#1 & #2 & #3 \\}

