%% Es OBLIGATORIO compilar con la opción -shell-escape habilitada.
%% Ejemplo: lualatex -shell-escape main.tex

%% Cargar paquetes necesarios
\RequirePackage{tcolorbox}
\tcbuselibrary{minted,skins,breakable,theorems}
\RequirePackage{minted}
\RequirePackage{fontawesome5}

%% Configurar nombres en español para minted/listings
\renewcommand{\listoflistingscaption}{Índice de Códigos}
\renewcommand{\listingscaption}{Código}

%% Numerar listings por capítulo (igual que figuras y tablas)
\AtBeginDocument{%
  \@ifundefined{c@chapter}{}{%
    \counterwithin{listing}{chapter}%
  }%
}

%% Definir comando para índice de códigos
\newcommand{\indiceCodigos}{\listoflistings}

