%% =============================================================================
%% CONFIGURACIÓN GLOBAL DE MINTED
%% =============================================================================
\setminted{
  fontsize=\small,
  breaklines=true,
  breakanywhere=true,
  tabsize=2,
  frame=none,
  autogobble=true,
}

%% =============================================================================
%% ESTILO BASE VS CODE LIGHT
%% =============================================================================
\tcbset{
  vscode-light-base/.style={
    enhanced,
    breakable,
    colback=vscode-bg,
    colframe=vscode-border,
    coltitle=vscode-titletext,
    colbacktitle=vscode-titlebar,
    arc=4pt,
    boxrule=1pt,
    left=2pt,
    right=5pt,
    top=2pt,
    bottom=2pt,
    listing only,
    listing engine=minted,
    fonttitle=\small\ttfamily\bfseries,
    toptitle=3pt,
    bottomtitle=3pt,
  },
  vscode-light-linenos/.style={
    vscode-light-base,
    minted options={linenos,numbersep=6pt,fontsize=\small,xleftmargin=1.5em},
  },
  vscode-light-nolinenos/.style={
    vscode-light-base,
    minted options={fontsize=\small,linenos=false},
  },
}

%% =============================================================================
%% ESTILO BASE VS CODE DARK
%% =============================================================================
\tcbset{
  vscode-dark-base/.style={
    enhanced,
    breakable,
    colback=vscode-dark-bg,
    colframe=vscode-dark-border,
    coltitle=vscode-dark-text,
    colbacktitle=vscode-dark-titlebar,
    arc=4pt,
    boxrule=1pt,
    left=2pt,
    right=5pt,
    top=2pt,
    bottom=2pt,
    listing only,
    listing engine=minted,
    fonttitle=\small\ttfamily\bfseries,
    toptitle=3pt,
    bottomtitle=3pt,
  },
  vscode-dark-linenos/.style={
    vscode-dark-base,
    minted options={linenos,numbersep=8pt,fontsize=\small,xleftmargin=1.5em,style=monokai},
  },
  vscode-dark-nolinenos/.style={
    vscode-dark-base,
    minted options={fontsize=\small,style=monokai,linenos=false},
  },
}

