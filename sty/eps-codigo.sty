%% =============================================================================
%% ESTILO SIMPLE (MINIMALISTA)
%% =============================================================================
\tcbset{
  simple-base/.style={
    enhanced,
    breakable,
    colback=white,
    colframe=black!30,
    coltitle=black,
    colbacktitle=white,
    arc=0pt,
    boxrule=0.4pt,
    left=6pt,
    right=6pt,
    top=10pt,
    bottom=4pt,
    listing only,
    listing engine=minted,
    fonttitle=\small\sffamily\bfseries,
    toptitle=3pt,
    bottomtitle=3pt,
    halign title=left,
    attach boxed title to top left={yshift=-\tcboxedtitleheight/2, xshift=6pt},
    boxed title style={colback=white, colframe=white, boxrule=0pt, arc=0pt},
  },
  simple-linenos/.style={
    simple-base,
    before upper={\setminted{linenos,numbersep=6pt,fontsize=\small,xleftmargin=1.5em}\renewcommand{\theFancyVerbLine}{\ttfamily\textcolor{black!60}{\scriptsize\arabic{FancyVerbLine}}}},
  },
  simple-nolinenos/.style={
    simple-base,
    before upper={\setminted{linenos=false,fontsize=\small,xleftmargin=0pt}},
  },
}

%% Entorno Genérico Simple
